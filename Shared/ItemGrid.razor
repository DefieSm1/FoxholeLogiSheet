<div style="@(SetGridTemplate()); @(OverflowScroll ? "overflow-y: auto;" : "")">
    @ChildContent
</div>

@code {
    [Parameter]
    public int Columns { get; set; } = 6;

    [Parameter]
    public int Rows { get; set; } = 5;

    [Parameter]
    public bool OverflowScroll { get; set; } = false;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public string RepeatString(string str, int amount) => string.Concat(Enumerable.Repeat(str, amount));

    public string SetGridTemplate()
    {
        string columnTemplate = $"grid-template-columns:{RepeatString(" 1fr", Columns)}";
        string rowTemplate = $"grid-template-rows:{RepeatString(" 1fr", Rows)}";

        return $"{columnTemplate}; {rowTemplate}";
    }
}
