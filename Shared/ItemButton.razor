@using FoxholeLogiSheet.Data

<button class="btn item-button @(Disabled ? "button-disabled" : "")"
        style="background-image: url(icons@(IconSet == "items" ? "/ProductionIcons" : "/")/@(Category)/@(ItemName).png); @(String.IsNullOrEmpty(Border) ? "" : $"border: {Border}" )"
        @onmouseover="OnMouseOver!"
        @onmouseout="OnMouseOut!"
        @onclick="(e) => OnButtonClick!(e)"/>

@code {
    [Parameter]
    public string ItemName { get; set; } = "";

    [Parameter]
    public string Category { get; set; } = "";

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public string IconSet { get; set; } = "items";

    [Parameter]
    public string Border { get; set; } = null;

    [Parameter, EditorRequired]
    public Action? OnMouseOver { get; set; }

    [Parameter, EditorRequired]
    public Action? OnMouseOut { get; set; }

    [Parameter, EditorRequired]
    public Action<MouseEventArgs>? OnButtonClick { get; set; }
}
