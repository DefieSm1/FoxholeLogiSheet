<div class="about-container" style="display: @(Display ? "flex" : "none")">
	<div class="about-background" @onclick="HideAbout"></div>
	<div class="about-infobox">
		<h1>Foxhole Logi Sheet</h1>
		<p>A Logistics Helper Tool for Wardens</p>
		<p>Currently includes Factory, Facility and Assembly Station sheets.</p>
		<p>For any suggestions/issues/feedback contact on Discord: @@Defie#9180</p>
		<p>Up to date for Foxhole Update 50 „Inferno”</p>
		<hr />
		<div class="changelog">
			<p>Version @version</p>
			<ul>
				<li>Added a little infobox for facility recipes with info about their autonomy (not sure if the values are currently accurate, too tired to check for now)</li>
				<li>Realised there's an inbuilt function to make timestamps and I didn't need to write janky code to make them x)</li>
				<li>Put the JS script for the infoboxes in a separate file</li>
			</ul>
		</div>
		<hr />
		<p class="about-trademark"><a href="https://www.foxholegame.com/">Foxhole</a> is a registered trademark of <a href="https://www.siegecamp.com/">Siegecamp</a></p>
	</div>
</div> 

@code {
	[Parameter]
	public bool Display { get; set; } = false;

	[Parameter]
	public EventCallback<bool> DisplayChanged { get; set; }

	Task HideAbout() 
	{
		Display = !Display;
		return DisplayChanged.InvokeAsync(Display);
	}

	Version? version = typeof(Program).Assembly.GetName().Version;
}
